<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    <Label text="Nombre de usuario:" style="-fx-font-size: 14pt;"/>
    <TextField fx:id="usernameField" style="-fx-font-size: 12pt;"/>
    <Label text="Contraseña:" style="-fx-font-size: 14pt;"/>
    <PasswordField fx:id="passwordField" style="-fx-font-size: 12pt;"/>
    <Label text="Nombre:" style="-fx-font-size: 14pt;"/>
    <TextField fx:id="nameField" style="-fx-font-size: 12pt;"/>
    <Label text="Correo electrónico:" style="-fx-font-size: 14pt;"/>
    <TextField fx:id="emailField" style="-fx-font-size: 12pt;"/>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Guardar" style="-fx-font-size: 12pt;"/>
        <Button text="Cancelar" style="-fx-font-size: 12pt;"/>
    </HBox>
</VBox>
